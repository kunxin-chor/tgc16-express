{{#extends "base"}}

{{#block "title"}}
Sightings
{{/block}}

{{#block "content"}}
<table class="table">
    <thead> <!-- table headers -->
        <tr> <!-- table row -->
            <th>ID</th> <!-- table header -->
            <th>Description</th>
            <th>Food</th>
        </tr>
    </thead>
    {{#each sightings}}
        <tr>
            <td>{{this._id}}</td> <!-- table column -->
            <td>{{this.description}}</td>
            <td>{{this.food}}</td>
        </tr>
    {{/each}}

</table>
{{/block}}

{{/extends}}